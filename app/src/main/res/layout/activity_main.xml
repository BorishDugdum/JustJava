<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Container -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name for order"
                android:textAllCaps="true"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"
                android:maxLines="1"
                android:maxLength="10"
                android:inputType="textPersonName"
                android:hint="Enter Name For Order"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toppings"
                android:textAllCaps="true"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/add_whipped_cream"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="updateOrderSummary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:text="Whipped Cream"
                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/add_chocolate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="updateOrderSummary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:text="Chocolate"
                    android:textSize="16sp"/>

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textAllCaps="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:onClick="decCount"
                    android:layout_margin="8dp"
                    android:text="-" />

                <TextView
                    android:id="@+id/quantity_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="0" />

                <Button
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:onClick="incCount"
                    android:layout_margin="8dp"
                    android:text="+" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Summary"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/order_summary_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="$0.00" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:onClick="submitOrder"
                android:text="Order" />

            <TextView
                android:id="@+id/order_submitted_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text=""
                android:textSize="16sp"/>
        </LinearLayout>

    </ScrollView>



</android.support.constraint.ConstraintLayout>